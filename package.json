{
  "name": "@playbooks/core",
  "version": "0.0.0",
  "description": "A collection of resources for Playbooks.",
  "author": "Eric Hubbell<eric@erichubbell.com>",
  "license": "ISC",
  "scripts": {
    "start": "npm start --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "build:ts": "npm run build:ts --workspaces --if-present",
    "build:dev": "npm run build -w packages/utils -w packages/types -w packages/theme -w packages/ui -w packages/contexts -w packages/hooks -w packages/components -w packages/molecules -w packages/configs",
    "clean": "npm run clean --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "format:fix": "npm run format:fix --workspaces --if-present",
    "commit": "scripts/commit.sh",
    "deploy": "npm run deploy --workspaces",
    "deploy:core": "npm run deploy -w packages/adapters -w packages/configs -w packages/normalizers -w packages/serializers",
    "deploy:web": "npm run deploy -w packages/assets -w packages/components -w packages/contexts -w packages/hooks -w packages/icons -w packages/molecules-w packages/theme -w packages/ui",
    "deploy:server": "npm run deploy -w packages/services",
    "deploy:utils": "-w packages/configs -w packages/types -w packages/utils",
    "test": "npm run jest --workspaces",
    "prepare": "husky"
  },
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  },
  "devDependencies": {
    "@playbooks/configs": "^0.0.8",
    "@types/jest": "^29.5.1",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@vitejs/plugin-react": "^4.5.2",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "jest": "^29.5.0",
    "prettier": "^3.5.3",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.16",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "vite": "^7.0.0",
    "vite-plugin-size": "^0.1.2",
    "vite-plugin-yalc": "^0.0.13"
  },
  "workspaces": [
    "packages/adapters",
    "packages/assets",
    "packages/components",
    "packages/configs",
    "packages/contexts",
    "packages/hooks",
    "packages/icons",
    "packages/normalizers",
    "packages/serializers",
    "packages/services",
    "packages/theme",
    "packages/types",
    "packages/ui",
    "packages/utils"
  ]
}
