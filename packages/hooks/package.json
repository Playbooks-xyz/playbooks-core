{
	"name": "@playbooks/hooks",
	"version": "0.0.2",
	"description": "A collection of React hooks for Playbooks.",
	"author": "Eric Hubbell<eric@erichubbell.com>",
	"license": "ISC",
	"main": "dist/index.cjs",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/playbooks-xyz/playbooks-kit/packages/hooks.git"
	},
	"files": [
		"dist"
	],
	"keywords": [
		"playbooks",
		"hooks"
	],
	"scripts": {
		"start": "vite build --mode development --minify false --watch",
		"build": "vite build --mode production --minify true && npm run build:ts",
		"build:ts": "dts-bundle-generator --config dts.config.ts",
		"lint": "eslint src",
		"lint:fix": "eslint src --fix",
		"format": "prettier src",
		"format:fix": "prettier --write src",
		"clean": "npm run lint:fix",
		"commit": "scripts/commit.sh",
		"deploy": "scripts/deploy.sh",
		"packages": "scripts/packages.sh",
		"yalc": "scripts/yalc.sh",
		"git": "git push --tags",
		"test": "jest",
		"prepare": "husky"
	},
	"peerDependencies": {
		"next": "^14 || ^15",
		"react": "^18 || ^19",
		"react-dom": "^18 || ^19"
	},
	"dependencies": {
		"@playbooks/utils": "^0.0.2"
	}
}
