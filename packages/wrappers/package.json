{
	"name": "@playbooks/wrappers",
	"version": "0.0.0",
	"description": "A collection of wrappers for React projects.",
	"author": "Eric Hubbell<eric@erichubbell.com>",
	"license": "ISC",
	"main": "dist/index.cjs.js",
	"module": "dist/index.es.js",
	"types": "dist/src/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"start": "vite build --mode development --minify false --watch",
		"build": "vite build --mode production --minify true && npm run build:ts",
		"build:ts": "dts-bundle-generator --config dts.config.ts",
		"clean": "npm run lint:fix && npm run format:fix",
		"lint": "eslint src",
		"lint:fix": "eslint src --fix",
		"format": "prettier src",
		"format:fix": "prettier --write src",
		"commit": "scripts/commit.sh",
		"deploy": "scripts/deploy.sh",
		"test": "jest",
		"prepare": "husky"
	},
	"peerDependencies": {
		"react": "^18 || ^19",
		"react-dom": "^18 || ^19"
	},
	"dependencies": {
		"@ehubbell/html": "^0.1.10",
		"@ehubbell/scrollspy": "^0.0.2",
		"@react-spring/web": "^10.0.1",
		"react-intersection-observer": "^9.16.0",
		"react-loading-skeleton": "^3.5.0",
		"react-transition-group": "^4.4.5"
	},
	"devDependencies": {
		"@playbooks/configs": "^0.0.17",
		"@types/jest": "^29.5.1",
		"@types/react": "^18.0.26",
		"@types/react-dom": "^18.0.9",
		"@vitejs/plugin-react": "^4.5.2",
		"dts-bundle-generator": "^9.5.1",
		"eslint": "^8.57.1",
		"husky": "^9.1.7",
		"jest": "^29.5.0",
		"prettier": "^3.5.3",
		"rollup-plugin-peer-deps-external": "^2.2.4",
		"ts-jest": "^29.1.0",
		"ts-node": "^10.9.1",
		"tslib": "^2.8.1",
		"typescript": "^5.8.3",
		"vite": "^6.3.5"
	}
}
